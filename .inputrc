###
### Options
###
#
# Use Emacs style editing
set editing-mode emacs

# Show completions on first TAB press
set show-all-if-ambiguous on

# Colored completions + prefix
set colored-completion-prefix on
set colored-stats on

# Ignore case on completions
set completion-ignore-case on

# Completing from within a word
set skip-completed-text on

###
### Binds
###

# Quick insertion of flags
"\e-": "\C-a\ef -"

# Quick 'sudo' last command
"\es": "\C-p\C-asudo \C-e"

# Quick 'vi' last command
"\ev": "vi \e."

# Reverse search
"\e[A": history-search-backward
"\e[B": history-search-forward
"\e[1;5A": history-substring-search-backward
"\e[1;5B": history-substring-search-forward
