#!/bin/sh
#
# Ansiblecfg - Simple script to switch from global/local ansible configuration
#
AnsibleCfg="${HOME}/.ansible.cfg"

if [ -r "${AnsibleCfg}.disabled" ]; then
   echo "Local configuration active!"
   mv ${AnsibleCfg}.disabled ${AnsibleCfg}
elif [ -r "${AnsibleCfg}" ]; then
   echo "Global configuration active!"
   mv ${AnsibleCfg} ${AnsibleCfg}.disabled
fi
